<%- include ('../partials/header') %>
<DOCTYPE! HTML>
<body style="min-height: 100vh; display: flex; flex-direction: column;">
<div class="page-content page-container" id="page-content" style=" margin: auto; width: 75%; padding: 10px;">
    <div class="padding" >
        <div class="row container d-flex justify-content-center" style=" margin: auto;">
            <div class="col-xl-6 col-md-12" style=" margin: auto;">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <!-- Header -->
                        <h4 style="padding: 10px; padding-left: 30px;">
                            <b>Profile:</b>
                        </h4>
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-black">
                                <div class="m-b-25">
                                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSfnFyVlhJCn6S1KqNWhPAkxiqXc5qG3Xqz0Q&usqp=CAU" class="img-radius" alt="User-Profile-Image" width="90" height="90">
                                </div>
                                <!-- Display users username -->
                                <h6 class="f-w-600"> <b>Username</b> </h6>
                                <p> <%= username %> </p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block"> <br>
                                <!-- Header for rest of user info -->
                                <h5 class="m-b-20 p-b-5 b-b-default f-w-600"> <b>Information</b> </h5>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <!-- Didplay user pass -->
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600"> Pass </h6>
                                        <p class="text-muted"><%= pass %></p>
                                    </div>
                                    <div class="col-sm-6">
                                        <!-- Display user skill level -->
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600"> Skill Level </h6>
                                        <p class="text-muted f-w-400"><%= skill_level %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>
<%- include ('../partials/footer') %>